<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="186dp">

        <TextView
            android:id="@+id/offer_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:background="@drawable/limited_offer_background"
            android:padding="4dp"
            android:text="LIMITED OFFER!"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/offer_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offer_label"
            android:layout_marginTop="20dp"
            android:text="Get 20% discount with your Master credit cards"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/offer_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offer_discount"
            android:layout_marginTop="8dp"
            android:text="Matercard"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/offer_image"
            android:layout_width="112dp"
            android:layout_height="89dp"
            android:layout_below="@id/offer_card_type"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/mastercard_image" />

        <TextView
            android:id="@+id/offer_description"
            android:layout_width="270dp"
            android:layout_height="36dp"
            android:layout_below="@id/offer_image"
            android:layout_marginStart="100dp"
            android:layout_marginTop="-57dp"
            android:text="Use your mastercard with any transaction and get 20% discount instantly!"
            android:textColor="#888888"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/heart_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="29dp"
            android:background="@drawable/bg_white_circle"
            android:contentDescription="Favorite"
            android:padding="8dp"
            android:src="@drawable/img_6" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
