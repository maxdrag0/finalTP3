<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Container for the top section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- From and To -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <!-- From -->
            <TextView
                android:id="@+id/tvFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EZE"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp" />

            <!-- Arrow indicating to -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â†’"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp" />

            <!-- To -->
            <TextView
                android:id="@+id/tvTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAX"
                android:textSize="20sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Kebab icon -->
        <ImageView
            android:id="@+id/ivKebab"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:src="@drawable/img_3" />
    </LinearLayout>

    <!-- Departure Date -->

    <!-- Container for the results found and filter icon -->
    <TextView
        android:id="@+id/tvDepartureDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="29 July, 2022"
        android:textColor="#000000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        >

        <!-- Results found -->
        <TextView
            android:id="@+id/tvResultsFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35 results found"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_weight="1" />

        <!-- Filter icon -->
        <ImageView
            android:id="@+id/ivFilter"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_2" />
    </LinearLayout>

    <!-- RecyclerView for the list of flights -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" />
</LinearLayout>
